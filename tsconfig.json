{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "lib": [ "esnext", "dom" ],
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "typeRoots": ["./@types/", "./node_modules/@types/"],
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ]
}
